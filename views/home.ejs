<html>
    <head>
      <title>
          <%= title %>
      </title>
      <link rel="stylesheet" href="/css/home.css">
      <meta content="width=device-width, initial-scale=1" name="viewport" />
      <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
    </head>
    <body>
      <div id="home-container">

        <section id="display-habit-container">
          <% if(userId){ %>
            <table>
              <tr>
                <th>
                  Habits you follow
                </th>  
              </tr>
            <% for(habit of habits) {%>
            <tr>
              <td>
                <a href="/users/habit-detail/<%= habit._id %>"><%= habit.habit %></a>  
              </td>      
            </tr> 
              <% } %>
          </table>
          <% } %> 
         </section>

         <section id="add-habit-form">
           <div>
            <h1>
              Enter New Habit
            </h1>
            <% if(locals.user){ %>
              <form action="/users/add-habit" method="POST">
                <input type="text" name="habit" placeholder="Enter Habit">
                <input type="text" name="userId" value="<%= locals.user._id %>" hidden>
                <input type="submit" value="Add habit">
              </form>
            <% } %>
           </div>
         </section>

      </div>
       
    </body>
   
</html>